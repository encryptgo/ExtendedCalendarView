<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ecv_cell_date"
        style="@style/ExtendedCalndarCellText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="1"
        tools:text="4"/>

    <TextView
        android:id="@+id/ecv_cell_top_txt"
        style="@style/ExtendedCalndarCellText"
        tools:text="top text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ecv_cell_middle_txt"
        style="@style/ExtendedCalndarCellText"
        tools:text="top text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ecv_cell_bottom_txt"
        style="@style/ExtendedCalndarCellText"
        tools:text="top text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>